<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/create_route_info_window_name_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/create_route_info_window_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_route_info_window_name_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/create_route_info_window_checkpoint"
        android:layout_width="match_parent"
        android:layout_height="@dimen/abc_action_button_min_height_material"
        android:text="@string/create_route_info_window_checkpoint_title"
        app:switchPadding="16dp"
        android:checked="false"

        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/create_route_info_window_name_ti"
        android:layout_alignLeft="@+id/create_route_info_window_name_ti"
        android:layout_alignStart="@+id/create_route_info_window_name_ti" />

</RelativeLayout>